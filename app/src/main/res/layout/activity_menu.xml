            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statistic_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1500 km"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableStart="@drawable/car_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="30 days"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableStart="@drawable/date_icon"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/horibox_2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horibox_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="30.52"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableStart="@drawable/euro_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="25.00 l"
                android:textSize="20sp"
                android:textAlignment="center"
                android:gravity="center"
                android:drawableStart="@drawable/gasstation_icon"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
