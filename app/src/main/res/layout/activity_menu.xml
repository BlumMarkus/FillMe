    <LinearLayout
        android:id="@+id/icon_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_new_showEntries"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            app:srcCompat="@drawable/show_list"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="8dp" />

        <ImageButton
            android:id="@+id/btn_new_showStatistic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            app:srcCompat="@drawable/show_statistics" />

        <ImageButton
            android:id="@+id/btn_new_newEntry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            app:srcCompat="@drawable/add_new" />

        <ImageButton
            android:id="@+id/btn_new_showSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            app:srcCompat="@drawable/show_settings" />

        <ImageButton
            android:id="@+id/btn_new_exitApp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            app:srcCompat="@drawable/exit_app" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actualData_layout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/lightBackground"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Aktueller Kilometerstand:"
            android:textSize="16sp"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"/>

        <TextView
            android:id="@+id/tv_new_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="106854"
            android:textSize="40sp"
            android:textAlignment="center"
            android:gravity="center"
            android:drawableStart="@drawable/car_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Letzter Eintrag:"
            android:textSize="16sp"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/tv_new_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="04.09.2017"
            android:textSize="40sp"
            android:textAlignment="center"
            android:gravity="center"
            android:drawableStart="@drawable/date_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/latest_layout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actualData_layout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightBlue"
            app:srcCompat="@drawable/last_time_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightBackground"
            app:srcCompat="@drawable/calendar_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lightBackground"
            app:srcCompat="@drawable/calendar_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
