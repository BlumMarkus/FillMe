<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.me.fill.mblum.android.fillme.MenuActivity">

    <LinearLayout
        android:id="@+id/icon_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:background="@color/background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


        <ImageButton
            android:id="@+id/btn_menu_show_statistic_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_show_list"/>

        <ImageButton
            android:id="@+id/btn_menu_show_statistic_diagram"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_show_statistics" />

        <ImageButton
            android:id="@+id/btn_menu_add_new_entry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_add_new" />

        <ImageButton
            android:id="@+id/btn_menu_show_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_show_settings" />

        <ImageButton
            android:id="@+id/btn_menu_exit_app"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_exit_app" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actualData_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="@color/backgroundBlue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aktueller Kilometerstand:"
            android:textSize="16sp"
            android:textColor="@color/title"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"/>

        <TextView
            android:id="@+id/tv_menu_show_last_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableStart="@drawable/car_icon"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="106854"
            android:textAlignment="center"
            android:textColor="@color/title"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Letzter Eintrag:"
            android:textSize="16sp"
            android:textColor="@color/title"
            android:paddingStart="6dp"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/tv_menu_show_last_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="3"
            android:drawableStart="@drawable/calendar_icon"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="04.09.2017"
            android:textAlignment="center"
            android:textColor="@color/title"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/latest_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:background="@color/backgroundlightBlue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actualData_layout">

        <ImageButton
            android:id="@+id/btn_menu_show_overview_last_fill"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundlightBlue"
            app:srcCompat="@drawable/all_time_icon" />

        <ImageButton
            android:id="@+id/btn_menu_show_overview_last_month"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundlightBlue"
            app:srcCompat="@drawable/calendar_icon" />

        <ImageButton
            android:id="@+id/btn_menu_show_overview_last_year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundlightBlue"
            app:srcCompat="@drawable/calendar_icon" />

        <ImageButton
            android:id="@+id/btn_menu_show_overview_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundlightBlue"
            app:srcCompat="@drawable/fulltime_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statistic_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:background="@color/backgroundlightBlue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latest_layout">

        <LinearLayout
            android:id="@+id/horibox_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statistic_layout">

            <TextView
                android:id="@+id/tv_menu_show_overview_mileage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1500 km"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:gravity="center"
                android:padding="15dp"
                android:drawableStart="@drawable/car_icon"/>

            <TextView
                android:id="@+id/tv_menu_show_overview_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="30 days"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:gravity="center"
                android:padding="15dp"
                android:drawableStart="@drawable/date_icon"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/horibox_2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horibox_1">

            <TextView
                android:id="@+id/tv_menu_show_overview_cost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="30.52"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:gravity="center"
                android:padding="15dp"
                android:drawableStart="@drawable/euro_icon"/>

            <TextView
                android:id="@+id/tv_menu_show_overview_liter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="25.00 l"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:gravity="center"
                android:padding="15dp"
                android:drawableStart="@drawable/gasstation_icon"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
