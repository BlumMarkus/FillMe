<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.me.fill.mblum.android.fillme.showEntriesActivity">

    <LinearLayout
        android:id="@+id/showEntries_layout_icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:background="@color/background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent">


        <ImageButton
            android:id="@+id/btn_showEntries_show_statistic_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundBlue"
            app:srcCompat="@drawable/showentries_show_list"/>

        <ImageButton
            android:id="@+id/btn_showEntries_show_statistic_diagram"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_show_statistics" />

        <ImageButton
            android:id="@+id/btn_showEntries_add_new_entry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_add_new" />

        <ImageButton
            android:id="@+id/btn_showEntries_show_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_show_settings" />

        <ImageButton
            android:id="@+id/btn_showEntries_exit_app"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            app:srcCompat="@drawable/menu_exit_app" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/showEntries_layout_headline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:background="@color/backgroundBlue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showEntries_layout_icon">

        <ImageButton
            android:id="@+id/btn_showEntries_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/backgroundBlue"
            app:srcCompat="@drawable/newentry_back" />

        <TextView
            android:id="@+id/tv_showEntries_headline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="EintrÃ¤ge anzeigen"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/title"
            android:textAlignment="center"
            android:paddingTop="15dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_showEntries_all"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"/>
</android.support.v7.widget.LinearLayoutCompat>
