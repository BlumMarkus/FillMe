<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12sp"
    android:paddingBottom="12sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingStart="12sp"
        android:paddingEnd="12sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="4sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_showEntries_monthShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_showEntries_dayOfMonth"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:textSize="18sp" />
        </LinearLayout>

            <TextView
                android:id="@+id/tv_showEntries_mileage"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:layout_marginEnd="4sp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:text="@string/str_UnitMileage"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_showEntries_price"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:layout_marginEnd="4sp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:text="@string/str_UnitPrice"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_showEntries_liter"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:layout_marginEnd="4sp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:text="@string/str_UnitAmount"
                android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>